/* USER CODE BEGIN PD */

#define LIGHT_RED 0b1111110011010011
#define LIGHT_GREEN 0b1001111111110011
#define LIGHT_BLUE 0b1001110011011111

/* USER CODE END PD */

/* Private macro -------------------------------------------------------------*/
/* USER CODE BEGIN PM */

/* USER CODE END PM */

/* Private variables ---------------------------------------------------------*/

char str[50];
char debug[50];
uint8_t cmdBuffer[3];
uint8_t dataBuffer[8];

float h = 30.0, t = 40.0;
uint8_t step = 0;
volatile uint8_t touchFlag = 0;


uint8_t Red_L = 0;
uint8_t Green_L = 0;
uint8_t Blue_L = 0;

HAL_StatusTypeDef status;

